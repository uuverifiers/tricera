#!/bin/sh

LAZABS=../../tri

TESTS="contract1.hcc \
       contract2.hcc \
       contract2b.hcc \
       contract3.hcc \
       takeuchi.hcc  \
       assert.hcc \
       fib.hcc \
       stackptr.hcc \
       struct-name-bug.hcc \
       stackptr-func-dec.hcc \
       stackptr-multi-arg.hcc \
       stackptr-nested-calls.hcc \
       stackptr-recursion.hcc \
       stackptr-retvalue.hcc \
       stackptr-struct.hcc"

for name in $TESTS; do
    echo
    echo $name
    $LAZABS -cex -acsl "$@" $name 2>&1 | grep -v 'at '
done

TESTS="stackptr-custom-entry.hcc"

for name in $TESTS; do
    echo
    echo $name
    $LAZABS -cex -acsl -m:entryPoint "$@" $name 2>&1 | grep -v 'at '
done

ILP32TESTS="stackptr-ilp32.hcc"
for name in $ILP32TESTS; do
    echo
    echo $name
    $LAZABS -cex -acsl -arithMode:ilp32 "$@" $name 2>&1 | grep -v 'at '
done
